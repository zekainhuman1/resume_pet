<div class="col-4 my-auto">
  <p>{{number}}</p>
  <p><b>{{status}}</b></p>
</div>
<div class="col-2 my-auto">
  <p>{{amount.title}}:</p>
  <p><b>{{amount.value}}</b></p>
</div>
<div class="col-4 ">
  {{#each images}}
  <img src="{{this}}" class="my-2 w-25 rounded" alt="{{this}}">
  {{/each}}
</div>
<div class="col-2 m-0 my-auto ">
  <a class="btn btn-{{#if button.isPrimary}}primary{{/if}}" href="{{button.link}}" role="button">{{button.text}}</a>
</div>
<hr class="m-0 p-0 px-5 me-5">