<main>
    {{> nav skills=1}}
    <div>
        {{#with main}}
        <main>
            <section>
                {{> title data="My skills" big=true}}
                <ul>
                    {{#each skills}}
                    <li>
                        {{name}}
                        {{#if point includeZero = true}} - {{point}} {{/if}}
                        {{#if isTop}} (TOP) {{/if}}
                        {{#unless point includeZero = true}} (не вивчаємо) {{/unless}}
                        {{#unless point}}
                        {{#if point includeZero = true}}
                        (вивчаємо зараз)
                        {{/if}}
                        {{/unless}}
                    </li>
                    {{/each}}
                </ul>
            </section>
            <section>
                {{> title data="My hobbies" big=false}}
                <ol>
                    {{#each hobbies}}
                    <li>
                        {{name}}
                        {{#if isMain}} - (favourite) {{/if}}
                    </li>
                    {{/each}}
                </ol>
            </section>
        </main>
        {{/with}}
    </div>
</main>